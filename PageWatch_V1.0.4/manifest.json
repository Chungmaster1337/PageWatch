{
  "manifest_version": 3,
  "name": "Dynamic Page Monitor",
  "version": "2.0",
  "description": "Monitor user-defined pages for changes and view diffs.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["data-export.html", "data-export.js", "diff.html", "diff.js", "search-reports.html", "search-reports.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}